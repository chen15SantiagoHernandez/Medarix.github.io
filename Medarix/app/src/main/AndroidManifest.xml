<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- PERMISO NECESARIO para descargar los feeds RSS/Atom desde Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- En API 31+ puedes necesitar SCHEDULE_EXACT_ALARM si usas setExactAndAllowWhileIdle para alarmas de la notificacion -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!--En Android 13+  hay que declararlo y pedir permiso en runtime.-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medarix"
        tools:targetApi="31">
        <activity
            android:name=".listaAjuste.InfoCuentaActivity"
            android:exported="false" />
        <activity
            android:name=".screens.ComunidadDatos"
            android:exported="false" />
        <activity
            android:name=".screens.EnfermedadDatos"
            android:exported="false" />

        <activity
            android:name=".screens.Registro"
            android:exported="false" />
        <activity
            android:name=".screens.Login"
            android:exported="false" />
        <activity
            android:name=".screens.Principal"
            android:exported="false" />
        <activity
            android:name=".screens.Logueo"
            android:exported="false" />
        <activity
            android:name=".listaAjuste.FavoritosActivity"
            android:exported="false" />
        <activity
            android:name=".listaAjuste.NotificacionesActivity"
            android:exported="false" />
        <activity
            android:name=".listaAjuste.RecordatoriosActivity"
            android:exported="false" />
        <activity android:name=".listaAjuste.AyudaActivity" android:exported="false"/>
        <activity
            android:name=".screens.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".listaAjuste.ReminderReceiver"
            android:exported="false" />
    </application>

</manifest>